<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Riki\SubscriptionMachine\Block\Adminhtml\Skus\Edit" name="machine_skus_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Riki\SubscriptionMachine\Block\Adminhtml\Skus\Edit\Tabs" name="machine_sku_edit_tabs">
                <block class="Riki\SubscriptionMachine\Block\Adminhtml\Skus\Edit\Tab\Main" name="machine_skus_edit_tab_main"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">machine_skus_edit_tab_main</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Magento\Framework\View\Element\Text" name="riki_machine_api_wbs_rule_validate">
                <arguments>
                    <argument name="text" xsi:type="string"><![CDATA[
                    <script>require(["Riki_Rule/js/validation/rules"]);</script>
                    ]]></argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>