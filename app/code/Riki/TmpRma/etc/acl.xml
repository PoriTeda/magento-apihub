<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Magento_Sales::sales_operation">
                        <resource id="Magento_Rma::magento_rma" title="Riki Rma">
                            <resource id="Riki_TmpRma::rma" title="Temp Return">
                                <resource id="Riki_TmpRma::rma_actions" title="Actions">
                                    <resource id="Riki_TmpRma::rma_actions_create" title="Create" sortOrder="10" />
                                    <resource id="Riki_TmpRma::rma_actions_view" title="View" sortOrder="20" />
                                    <resource id="Riki_TmpRma::rma_actions_edit" title="Edit" sortOrder="30" />
                                    <resource id="Riki_TmpRma::rma_actions_delete" title="Delete" sortOrder="40" />
                                    <resource id="Riki_TmpRma::rma_actions_reject" title="Reject" sortOrder="50" />
                                    <resource id="Riki_TmpRma::rma_actions_approve" title="Approve" sortOrder="60" />
                                    <resource id="Riki_TmpRma::rma_actions_close" title="Close" sortOrder="70" />
                                </resource>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>