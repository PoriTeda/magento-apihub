<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="customer_account">
            <field name="firstnamekana">
                <aspect name="create" />
                <aspect name="update" />
                <aspect name="name" />
            </field>
            <field name="lastnamekana">
                <aspect name="create" />
                <aspect name="update" />
                <aspect name="name" />
            </field>
        </fieldset>
        <fieldset id="customer_address">
            <field name="firstnamekana">
                <aspect name="to_quote_address"/>
            </field>
            <field name="lastnamekana">
                <aspect name="to_quote_address"/>
            </field>
            <field name="riki_type_address">
                <aspect name="to_quote_address"/>
            </field>
            <field name="apartment">
                <aspect name="to_quote_address"/>
            </field>
            <field name="riki_nickname">
                <aspect name="to_quote_address"/>
            </field>
        </fieldset>
        <fieldset id="sales_convert_quote_address">
            <field name="firstnamekana">
                <aspect name="to_customer_address"/>
                <aspect name="to_order_address"/>
            </field>
            <field name="lastnamekana">
                <aspect name="to_customer_address"/>
                <aspect name="to_order_address"/>
            </field>
            <field name="riki_nickname">
                <aspect name="to_customer_address"/>
                <aspect name="to_order_address"/>
            </field>
            <field name="riki_type_address">
                <aspect name="to_customer_address"/>
                <aspect name="to_order_address"/>
            </field>
            <field name="apartment">
                <aspect name="to_customer_address"/>
                <aspect name="to_order_address"/>
            </field>
        </fieldset>
        <fieldset id="order_address">
            <field name="firstnamekana">
                <aspect name="to_customer"/>
                <aspect name="to_customer_address"/>
            </field>
            <field name="lastnamekana">
                <aspect name="to_customer"/>
                <aspect name="to_customer_address"/>
            </field>
            <field name="riki_nickname">
                <aspect name="to_customer_address"/>
            </field>
            <field name="riki_type_address">
                <aspect name="to_customer_address"/>
            </field>
            <field name="apartment">
                <aspect name="to_customer_address"/>
            </field>
        </fieldset>
    </scope>
</config>
