        <column name="relation_entity_type">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Relation Entity Type</item>
                </item>
            </argument>
        </column>
        <column name="relation_entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Relation Entity ID</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
